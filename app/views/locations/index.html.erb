<!-- search-bar -->
<div class="search-bar">
  <%= form_tag locations_path, method: :get do %>
    <%= text_field_tag :address,
    nil,
    id: "location_address",
    placeholder: "Entrez votre adresse" %>
    <%= select_tag "category", options_for_select([ "toutes catégories", "alimentation", "composte",  "événement", "marché", "recyclage", "vêtement" ], prompt: "catégories"),
    id: "filters" %>
    <%= submit_tag "Go!", id: "submit" %>
  <% end %>
</div>

<!-- map -->
<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

