<div class="header">
  <h3>Mon profil</h3>
  <div class="x">
    <div class="croix">
      <p>+</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="profile_description">

    <div class="avatar_container">
      <%= image_tag "photo.png", class: "avatar" %>
      <!-- quand on mettra cl_image_tag avec cloudinary on rajoutera:  crop: :thumb, gravity: :face  -->
    </div>
    <div class= "description_text">
      <h3><%= @user.name %></h3>
      <p>13 avenue blabalbalb<%= @user.address %></p>
    </div>
  </div>

  <div class="profile-links">
      <p class="top">Suggérer une adresse</p>
      <p>Suggérer un évènement</p>
      <p>Géolocalisation</p>
  </div>

  <div class="button">
    <%= link_to destroy_user_session_path, method: :delete do %>
      <%= t(".sign_out", default: "Déconnexion") %>
    <% end %>
  </div>
</div>

